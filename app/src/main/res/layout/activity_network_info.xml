<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Information"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- IP Addresses Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IP Addresses"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/local_ip_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local IP: Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/public_ip_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Public IP: Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Network Type Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/network_type_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network Type: Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/connection_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Info: Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- WiFi Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/wifi_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi: Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- DNS Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DNS Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/dns_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DNS: Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>